<UserControl
    x:Class="ANPaX.DesktopUI.Views.FilmFormationControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ANPaX.DesktopUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="BlanchedAlmond"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Text="Film Formation Control View" />
        <Button
            x:Name="BuildFilmButton"
            cal:Message.Attach="BuildParticleFilm()"
            Content="Build Film"
            Style="{StaticResource DefaultButton}" />
    </StackPanel>
</UserControl>
